<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppEtecFlix.MainPage">

    <StackLayout VerticalOptions="FillAndExpand" BackgroundColor="Black">
        <StackLayout HeightRequest="100">
        </StackLayout>

        <Image x:Name="logo"/>

        
            <Grid RowDefinitions="*, *, *, *, *, *"
                  ColumnDefinitions="*, *"
                  Padding="10"
             >
                <Button x:Name="btnComedia" Text="Comédia" Grid.Row="2" Grid.Column="0" Clicked="btnComedia_Clicked"/>
            <Button x:Name="btnRomance" Text="Romance" Grid.Row="2" Grid.Column="1" Clicked="btnRomance_Clicked"/>
        </Grid>
        
    </StackLayout>

</ContentPage>
